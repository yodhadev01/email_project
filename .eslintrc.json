{
    "env": {
        "node":true
    },
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion":2020,
        "ecmaFeatures":{
            "experimentalObjectRestSpread":true
        }
    },
    "globals":{
        "Promise":true
    },
    // "parser": "@babel/eslint-parser",
    "rules": {
        "indent": ["error", "tab"],
        "no-tabs": 0,
        "no-bitwise":2,
        "camelcase":0,
        "eqeqeq":2,
        "no-eq-null":2,
        "wrap-iife":[
            2, "any"
        ],
        "no-use-before-define":[
            2,
            {
                "functions":false
            }
        ],
        "new-cap":2,
        "no-new":2,
        "no-caller":2,
        "no-undef":2,
        "no-unused-vars":0,
        "dot-notation":0,
        "max-len":[
            2,
            {
                "code":200,
                "ignoreComments":true
            }
        ],
        "semi":[
            2,
            "always"
        ],
        "no-const-assign":"error",
        "quotes":[
            "error",
            "single",
            {
                "avoidEscape":true
            }
        ],
        "quote-props":[
            "error",
            "as-needed",
            {
                "numbers":true
            }
        ],
        "prefer-const":[
            "error",
            {
                "destructuring":"any",
                "ignoreReadBeforeAssign":false
            }
        ]
    }
}
